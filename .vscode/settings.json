{
    "editor.inlineSuggest.enabled": true,
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true,
        "editor.hover.enabled": true
    },
    "editor.rulers": [
        100
    ],
    "rust-analyzer.check.overrideCommand": [
        "cargo",
        "clippy",
        "--workspace",
        "--message-format=json",
        "--all-features",
        "--all-targets",
        "--",
        "-A",
        "incomplete-features"
    ],
    "rust-analyzer.linkedProjects": [
        "Cargo.toml",
        "workspaces/sp1/script/Cargo.toml",
        "workspaces/sp1/program/Cargo.toml",
        "workspaces/risc0/host/Cargo.toml",
        "examples/fibonacci/Cargo.toml",
        "examples/sha/Cargo.toml",
        "examples/regex/Cargo.toml",
        "examples/rsa/Cargo.toml",
        "examples/ecdsa/Cargo.toml",
        "examples/eddsa/Cargo.toml",
        "examples/json/Cargo.toml",
        "examples/tendermint/Cargo.toml",
        "examples/zkquiz/Cargo.toml",
        "examples/keccak256/Cargo.toml"
    ],
    "rust-analyzer.showUnlinkedFileNotification": false
}